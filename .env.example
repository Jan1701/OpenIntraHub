# =====================================================
# OpenIntraHub Configuration Template
# Copy this file to .env and fill in your values
# OR use the Web Installer: http://localhost:3000/setup
# =====================================================

# Application
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost:3000

# JWT Authentication
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_64
JWT_EXPIRES_IN=24h

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=openintrahub
DB_USER=postgres
DB_PASSWORD=CHANGE_ME
DB_SSL=false

# Redis Cache (Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# LDAP/Active Directory (Optional)
LDAP_ENABLED=false
LDAP_URL=ldap://your-ad-server.local:389
LDAP_BIND_DN=CN=Service Account,OU=Users,DC=example,DC=local
LDAP_BIND_PASSWORD=
LDAP_SEARCH_BASE=DC=example,DC=local
LDAP_SEARCH_FILTER=(sAMAccountName={{username}})
LDAP_GROUP_SEARCH_BASE=OU=Groups,DC=example,DC=local
LDAP_IS_AD=true
LDAP_AD_DOMAIN=example.local

# LDAP Synchronization (Optional)
LDAP_SYNC_ENABLED=true
LDAP_SYNC_SCHEDULE=0 */6 * * *
LDAP_FULL_SYNC_ON_START=false
LDAP_DEACTIVATE_REMOVED=true

# Email / SMTP (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@openintrahub.local

# Exchange Calendar Sync (Optional)
EXCHANGE_ENABLED=false
EXCHANGE_DEFAULT_SERVER=https://mail.company.com/EWS/Exchange.asmx
EXCHANGE_DEFAULT_AUTH_TYPE=ntlm
EXCHANGE_ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND_HEX_64
EXCHANGE_SYNC_INTERVAL_MINUTES=15

# Logging
LOG_LEVEL=info
